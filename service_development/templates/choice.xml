{% extends "base.xml" %}
{% block content%}
<form  id="{{ choice.name }}">
	<field name="field1">
		<prompt>
			<audio src="{{ choice_voice_label }}"/>
			{% for option_voice_label in choice_options_voice_labels %}
				<audio src="{{ option_voice_label }}"/>
			{% endfor %}

					 {% comment %}<audio src="{{ interfaceAudioDir ~ "preoption.wav" }}"/>
    {#option#}
    <audio src="{{ option[1] }}"/>
    {#press#}
    <audio src="{{ interfaceAudioDir ~ "postoption.wav" }}"/>
    {#number#}
    <audio src="{{ interfaceAudioDir ~  loop.index ~ ".wav" }}"/>
	{% endfor %}
</prompt>

{# all possible inputs from the user #}
<grammar xml:lang="en-US" root = "MYRULE" mode="dtmf">
      <rule id="MYRULE" scope = "public">
        <one-of>
          {% for option in options %}
            <item>{{ loop.index }}</item>
          {% endfor %}
        </one-of>
       </rule>
     </grammar>


{# when there has been input, redirect the user to the corresponding URL #}
<filled>
    {% for option in options %}
      {% if loop.index == 1 %}
      <if cond="question1 == '{{ loop.index }}'">
      <goto next="{{option[0]}}"/>
      {% else %}
      <elseif cond="question1 == '{{ loop.index }}'" />
      <goto next="{{option[0]}}"/>
      {% endif %}
    {% endfor %}


    <else/>
    </if>
  </filled>

</field>
</form>{% endcomment %}
{% endblock %}
